<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Sign up</h1>
        <%= form_for @user do |f| %>

          <div class="form-group">
            <%= f.label :username, class: 'text-white' %>
            <%= f.text_field :username, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email2, class: 'text-white' %>
            <%= f.text_field :email2, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :age, class: 'text-white' %>
            <%= f.text_field :age, class: 'form-control' %>
          </div>



          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
        <%= link_to 'ログインはこちら', '#',class: 'text-white' %>
      </div>
    </div>
  </div>
</div>